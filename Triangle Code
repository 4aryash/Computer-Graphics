#include <GL/gl.h>
#include <GL/glut.h>   

void display() {  

    glClear(GL_COLOR_BUFFER_BIT); 
    glClearColor(0.5, 0.5, 0.5, 1);  
    

    glBegin(GL_TRIANGLES);
    glColor3f(1.0f, 0.0f, 0.0f); 
    glVertex2f(-0.5,-0.5);
    glColor3f(0.0f, 1.0f, 0.0f);
    glVertex2f(0.5,-0.5);
    glColor3f(0.0f, 0.0f, 1.0f);
    glVertex2f(0.0, 0.5);
    glEnd(); 

    glFlush();
}
